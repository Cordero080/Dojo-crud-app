<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body class="home">
    <h1 class="goju-ryu-logo">
      <span>G</span><span>O</span><span>J</span><span>U</span><span>-</span
      ><span>R</span><span>Y</span><span>U</span>
    </h1>

    <p>剛柔流</p>
    <h1><%= title %></h1>
    <p>Welcome to the Martial Arts Forms App.</p>

    <!-- Home page: nav will show ONLY login/signup when logged out; app links when logged in -->
    <%- include('partials/nav', { hideLogout: true }) %>

    <div
      style="
        width: 100%;
        display: flex;
        justify-content: center;
        margin-top: 32px;
      "
    >
      <img
        src="/images/chi-i-do.png"
        alt="Chi-i-do Logo"
        style="max-width: 220px; width: 100%; height: auto; object-fit: contain"
        class="logo"
      />
    </div>

    <!-- Optional: tiny bottom logout only when logged in -->
    <% if (currentUser) { %>
    <div class="logout-corner">
      <form action="/auth/logout" method="POST">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
    </div>
    <% } %> <%- include('partials/footer') %>
   
  </body>
</html>
